@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Profile";
}

@Html.Partial("~/Views/Shared/Components/_Header.cshtml")
<div class="app">
    <div class="app-container" style="margin-top: 95px;">
        <div class="no-padding">
            <div class="col-md-7 col-md-offset-1">
                @RenderBody()
            </div>
            <div class="col-md-3">
                @Html.Partial("~/Views/Profile/_SideMenu.cshtml")
            </div>
        </div>
    </div>
</div>
@Html.Partial("~/Views/Shared/Components/_Footer.cshtml")

@if ((int)Session["userRole"] == 0) {
    <div class="popup-container">
        <div class="scrollable">
            @Html.Partial("~/Views/Shared/Forms/_UserControlForm.cshtml")
        </div>
    </div>
}


<!-- JavaScript Files -->
<script src="~/Scripts/Components/Snackbar.js"></script>
<script src="~/Scripts/Components/Tabs.js"></script>
<script src="~/Scripts/Components/InputField.js"></script>
<script src="~/Scripts/CreateUser.js"></script>
<script src="~/Scripts/Pages/ProfilePage.js"></script>
<script src="~/Scripts/Actions/Form.js"></script>
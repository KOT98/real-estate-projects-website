<!-- INPUT FIELD COMPONENT -->
@helper InputField(string id, string inputName, string type) {
    <div class="input-field">
        <label>@inputName</label>
        <input id="@id" type="@type" />
        <i class="material-icons danger-icon">error_outline</i>
        <label class="error-message">Error Message</label>
    </div>
}

<!-- COMMENT COMPONENT -->
@helper Comment(string id, string userPhoto, string userName, string comment)
{
    <div class="comment">
        <img src="@userPhoto" width="35" />

        <div class="details">
            <label class="name">Muhammad Tarek</label>
            <label class="comment-text">I want in, with 3000$</label>
        </div>
        
    </div>
}